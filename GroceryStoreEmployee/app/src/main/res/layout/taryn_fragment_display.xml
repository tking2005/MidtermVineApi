<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tarynFrameLayout">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="nyc.c4q.tarynking.grocerystoreemployee.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Profile"
            android:id="@+id/employeeProfile"/>

        <TextView
            android:id="@+id/firstName_LastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Taryn King"
            android:layout_below="@+id/employeeProfile"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="My nick name is Tee"
            android:id="@+id/nickName"
            android:layout_below="@+id/firstName_LastName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="I love spicy foods"
            android:id="@+id/spicy"
            android:layout_alignEnd="@+id/nickName"
            android:layout_below="@+id/nickName"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="I love to travel"
            android:id="@+id/travel"
            android:layout_alignEnd="@+id/spicy"
            android:layout_below="@+id/spicy"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="I have a beautiful daughter"
            android:id="@+id/daughter"
            android:layout_alignEnd="@+id/travel"
            android:layout_below="@+id/travel"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src = "@drawable/taryn_selfie"
            android:id="@+id/image_tarynking"
            android:layout_below="@+id/daughter"
            android:layout_alignEnd="@+id/firstName_LastName" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src = "@drawable/taryn_daughter"
            android:id="@+id/image_daughter"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/image_tarynking"
            android:layout_below="@+id/image_tarynking"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src = "@drawable/taryn_paris"
            android:id="@+id/image_paris"
            android:layout_below="@+id/image_daughter"
            android:layout_alignEnd="@+id/image_daughter" />

    </RelativeLayout>

</FrameLayout>